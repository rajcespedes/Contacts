<form action="/contacts"  method="POST" class="container">
   <div class="form-group row col-6">
	    <label for="name" class="col-sm-2 col-form-label">Nombre</label>
	    <div class="col-sm-10">
	      <input id="name" type="text" name="contact[name]" class="form-control" placeholder="Nombre" required>
	    </div>
  </div>
  	<div class="form-group row col-6">
	    <label for="lastname" class="col-sm-2 col-form-label">Apellido</label>
